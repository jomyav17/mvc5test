@helper colorAmount(double amount)
{
var colorss = "green";
if (amount < 20)
{
    colorss = "red";
}
else if (amount < 30)
{
    colorss = "orange";
}
    <span style="color:@colorss">@String.Format("{0:c}", amount)</span>

}

